{
  "name": "@hugojosefson/virsh-svelte-ui",
  "private": true,
  "description": "Single-purpose app for starting a virtual machine.",
  "version": "0.1.0",
  "scripts": {
    "dev": "PORT=$(get-port $(seq 3000 3100)) sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "PORT=$(get-port $(seq 3000 3100)) node __sapper__/build",
    "cypress": "docker run -i --net=host -e PORT=\"${PORT:-3001}\" -v \"$(pwd)\":/e2e -w /e2e cypress/included:4.0.2 --config baseUrl=http://localhost:${PORT:-3001}",
    "lint": "prettier --plugin-search-dir=. --write '**/*.{svelte,html,js,mjs,md}'",
    "test": "PORT=\"$(get-port $(seq 3000 3100))\" npm-run-all lint --parallel --race dev cypress"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "plugins": [
      "import",
      "prettier",
      "standard",
      "cypress",
      "html",
      "svelte3"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "node": true,
      "browser": true,
      "es2020": true
    },
    "rules": {
      "space-before-function-paren": 0,
      "new-cap": 0,
      "prettier/prettier": 2
    },
    "settings": {
      "html": {
        "html-extensions": [
          ".html",
          ".svelte"
        ]
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ]
  },
  "dependencies": {
    "allow-methods": "^2.0.0",
    "compose-middleware": "^5.0.1",
    "compression": "^1.7.1",
    "cors": "^2.8.5",
    "execa": "^4.0.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "http-errors": "^1.7.3",
    "map-obj": "^4.1.0",
    "node-pty": "^0.9.0",
    "ramda": "^0.26.1",
    "reconnecting-websocket": "^4.2.0",
    "rxjs": "^6.5.4",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/runtime": "^7.9.2",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-html": "^6.0.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "get-port-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^2.6.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^5.3.0",
    "sapper": "npm:@hugojosefson/sapper@0.27.12-method-not-allowed",
    "svelte": "^3.20.1"
  }
}
