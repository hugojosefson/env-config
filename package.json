{
  "name": "@hugojosefson/env-config",
  "description": "Reads env variables. Reads files from *_FILE variables. Parses any JSON values.",
  "version": "1.0.2",
  "type": "module",
  "main": "./index",
  "module": "./index.mjs",
  "license": "MIT",
  "scripts": {
    "prepare": "npm-run-all build-cjs documentation lint-readme",
    "build-cjs": "babel index.mjs src --out-file index.js --source-maps inline",
    "lint": "prettier --write 'src/**/*.{js,mjs,md}' './*.{js,mjs,md}'",
    "lint-readme": "prettier --write README.md",
    "documentation": "documentation readme --markdown-toc=false --access=public --resolve=node --quiet --shallow --section=API ./index.mjs",
    "test": "npm-run-all lint documentation lint-readme mocha",
    "mocha": "mocha"
  },
  "files": [
    "src",
    "index.mjs",
    "index.js",
    "package.json",
    "yarn.lock",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=10.2.0"
  },
  "repository": "hugojosefson/env-config",
  "mocha": {
    "spec": "test/*-test.mjs"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "plugins": [
      "import",
      "prettier",
      "standard"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "node": true,
      "es2020": true
    },
    "rules": {
      "space-before-function-paren": 0,
      "new-cap": 0,
      "prettier/prettier": 2
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10.2.0"
          }
        }
      ]
    ]
  }
,
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "documentation": "^12.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "get-port-cli": "^2.0.0",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "dependencies": {}
}
