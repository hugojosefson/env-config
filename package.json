{
  "name": "@hugojosefson/env-config",
  "description": "Reads env variables. Reads files from *_FILE variables. Parses any JSON values.",
  "version": "1.3.1",
  "main": "./cjs/index.js",
  "module": "src/index.ts",
  "scripts": {
    "TODO-prepare": "run-s build documentation lint:markdown",
    "build": "run-p build:*",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "lint": "run-p lint:*",
    "lint:markdown": "prettier --config .prettierrc-markdown.js --write '{**/*,*}.md'",
    "lint:code": "eslint --fix --ext .mjs,.js,.ts src test ./*.js",
    "documentation": "documentation readme --markdown-toc=false --access=public --resolve=node --quiet --shallow --section=API src/index.ts",
    "test": "run-s lint documentation lint:markdown mocha",
    "mocha": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' ts-mocha -p tsconfig-test.json 'test/**/*.ts'",
    "itest": "./itest/test.sh",
    "itest-upgrade-deps": "for i in itest/*-*; do (cd $i && yarn upgrade --latest); done;"
  },
  "files": [
    "src",
    "cjs",
    "package.json",
    "yarn.lock",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "MIT",
  "repository": "hugojosefson/env-config",
  "lint-staged": {
    "*.{mjs,js,ts}": [
      "eslint --fix"
    ],
    "*.md": [
      "prettier --config .prettierrc-markdown.js --write"
    ]
  },
  "mocha": {
    "spec": "test/**/*-test.ts"
  },
  "prettier": "eslint-config-standard-typescript-prettier/prettier",
  "devDependencies": {
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "documentation": "^13.0.1",
    "eslint": "^7.3",
    "eslint-config-prettier": "^6",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14",
    "eslint-config-standard-typescript-prettier": "^3.2.0",
    "eslint-plugin-import": "^2.22",
    "eslint-plugin-node": "^11.0",
    "eslint-plugin-prettier": "^3.1",
    "eslint-plugin-promise": "^4.2",
    "eslint-plugin-standard": "^4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mkdirp": "^1.0.4",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2",
    "prettier-config-standard": "^1.0.1",
    "replace": "^1.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.13.1",
    "ts-mocha": "^7.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
